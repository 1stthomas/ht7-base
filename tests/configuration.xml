<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="true"
    bootstrap="./bootstrap.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    stopOnRisky="false"
    timeoutForSmallTests="1"
    timeoutForMediumTests="10"
    timeoutForLargeTests="60"
    verbose="true"
>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">../src</directory>
        </include>
        <exclude>
            <directory>../src/Exceptions</directory>
            <directory>../src/Utility</directory>
            <directory>../tests</directory>
            <directory>../tmp</directory>
            <file>../src/Lists/Hashable.php</file>
            <file>../src/Lists/ItemListable.php</file>
            <file>../src/Models/Loadable.php</file>
            <file>../src/Models/TransLoadable.php</file>
            <file>../src/ContainerLwable.php</file>
        </exclude>
    </coverage>
    <logging>
        <junit outputFile="..\..\logs\phpunit_ht7-base.xml"/>
    </logging>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="display_startup_errors" value="1" />
        <ini name="error_reporting" value="E_ALL|E_STRICT" />
        <ini name="error_log" value="php_errors.log" />
    </php>
    <testsuites>
        <testsuite name="ht7 base - unit">
            <directory>./unit/</directory>
        </testsuite>
    </testsuites>
</phpunit>
