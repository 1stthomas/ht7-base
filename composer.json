{
    "name": "ht7/ht7-base",
    "type": "library",
    "description": "A PHP library with several base classes",
    "keywords": ["php", "ht7"],
    "homepage": "https://github.com/1stthomas/ht7-base",
    "license": "GNU General Public License v3.0",
    "authors": [
        {
            "name": "1stthomas",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ht7\\Base\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ht7\\Base\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "support": {
        "source": "https://github.com/1stthomas/ht7-base"
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}